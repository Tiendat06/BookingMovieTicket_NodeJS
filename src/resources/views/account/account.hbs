<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Account Settings /</span> Manage Account
    </h4>

    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills flex-column flex-md-row mb-3">
                <li class="nav-item">
                    <a class="nav-link" href="/user/profile"><i class="bx bx-user me-1"></i>
                        Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="javascript:void(0);"><i class="bx bxs-cog me-1"></i>
                        Manage Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user"> <i class="bx bx-group me-1">
                        </i> Manage User</a>
                </li>
            </ul>

            <div class="card">
                <div class="user-management d-flex flex-wrap justify-content-between align-items-center">
                    <h5 class="card-header">User Management</h5>
                    <div class="btn__add-user p-4">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#backDropModal_add-user"
                            type="submit"><i class='bx bx-user-plus'></i> Add User</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive text-nowrap">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Admin</th>
                                    <th>Staff</th>
                                    <th>Lock</th>
                                    <th>Reset Password</th>
                                    <th>Send Mail</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each accountList}}
                                <tr>
                                    <td>{{sum @index 1}}</td>
                                    <td>
                                        {{!-- <i class="fab fa-angular fa-lg text-danger me-3"></i> --}}
                                        {{!-- <img style="width: 80px;" src="{{this.user_img}}" alt="" srcset=""> --}}
                                        <ul
                                            class="list-unstyled d-flex users-list m-0 avatar-group d-flex align-items-center">
                                            <li data-bs-toggle="tooltip" data-popup="tooltip-custom"
                                                data-bs-placement="top" class="avatar avatar-xs pull-up"
                                                style="margin-right: 5px;"
                                                title="{{this.user_first_name}} {{this.user_last_name}}">
                                                <img src="{{this.user_img}}" style="object-fit:cover" alt="Avatar"
                                                    class="rounded-circle" />
                                            </li>
                                            <strong>{{this.user_first_name}} {{this.user_last_name}}</strong>
                                        </ul>
                                    </td>
                                    <td>{{this.user_email}}</td>
                                    <td>{{this.user_phone}}</td>
                                    <td>{{this.user_address}}</td>
                                    <td>{{convertDate this.user_dob}}</td>
                                    <td>{{this.user_gender}}</td>
                                    {{!-- <td>
                                        <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                            <li data-bs-toggle="tooltip" data-popup="tooltip-custom"
                                                data-bs-placement="top" class="avatar avatar-xs pull-up"
                                                title="Lilian Fuller">
                                                <img src="/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                                            </li>
                                            <li data-bs-toggle="tooltip" data-popup="tooltip-custom"
                                                data-bs-placement="top" class="avatar avatar-xs pull-up"
                                                title="Sophia Wilkerson">
                                                <img src="/img/avatars/6.png" alt="Avatar" class="rounded-circle" />
                                            </li>
                                            <li data-bs-toggle="tooltip" data-popup="tooltip-custom"
                                                data-bs-placement="top" class="avatar avatar-xs pull-up"
                                                title="Christina Parker">
                                                <img src="/img/avatars/7.png" alt="Avatar" class="rounded-circle" />
                                            </li>
                                        </ul>
                                    </td> --}}
                                    {{!-- <td><span class="badge bg-label-primary me-1">Active</span></td> --}}
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                                data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu position-fixed" style="z-index: 1;">
                                                <button data-bs-toggle="modal" data-bs-target="#backDropModal_edit-user"
                                                    data-user_id="{{this.user_id}}"
                                                    data-user_first_name="{{this.user_first_name}}"
                                                    data-user_last_name="{{this.user_last_name}}"
                                                    data-user_email="{{this.user_email}}"
                                                    data-user_phone="{{this.user_phone}}"
                                                    data-user_address="{{this.user_address}}"
                                                    data-dob="{{this.user_dob}}" data-gender="{{this.user_gender}}"
                                                    data-user_img="{{this.user_img}}"
                                                    data-user_account_id="{{this.account_id}}"
                                                    class="dropdown-item btn-show-details"><i
                                                        class="bx bx-edit-alt me-1"></i> Edit</button>
                                                <button data-bs-toggle="modal"
                                                    data-bs-target="#backDropModal_delete-user"
                                                    data-user_id="{{this.user_id}}"
                                                    data-user_first_name="{{this.user_first_name}}"
                                                    data-user_last_name="{{this.user_last_name}}"
                                                    class="dropdown-item btn-show-delete"><i
                                                        class="bx bx-trash me-1"></i> Delete</button>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->