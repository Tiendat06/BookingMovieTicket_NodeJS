<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-7 col-md-6 row flex-wrap">
            <div class="col-lg-12 col-sm-12 col-12 mb-4">
                <small class="text-light fw-semibold">Category</small>
                <div class="demo-inline-spacing">
                    <div class="btn-group" id="dropdown-icon-demo">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <i class="bx bx-menu"></i> Category
                        </button>
                        <ul class="dropdown-menu">
                            {{#each categoryList}}
                            <li>
                                <a href="javascript:void(0);" data-category_id="{{this.category_id}}"
                                    class="dropdown-item d-flex align-items-center"><i
                                        class="bx bx-chevron-right scaleX-n1-rtl"></i>{{this.category_name}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            {{#each productList}}
            <div class="col-md-6 col-lg-4 mb-3 card-items">
                <div class="card-outer cursor-pointer" data-product_id="{{this.product_id}}" data-bs-toggle="modal"
                    data-bs-target="#backDropModal_choose-quantity">
                    <div class="card h-100 text-center">
                        <img class="card-img-top" height="200" style="object-fit: cover;" src="{{this.product_image}}"
                            alt="Card image cap" />
                        <div class="card-body">
                            <h5 class="card-title">{{this.product_name}}</h5>
                            <p class="card-text">{{this.quantity}} remaining</p>
                            <p class="card-text">{{this.retail_price}}$</p>
                            {{!-- <a href="javascript:void(0)" class="btn btn-outline-primary">Go somewhere</a> --}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            <nav aria-label="Page navigation" style="margin-right: 23px">
                <ul class="pagination justify-content-end">
                    <li class="page-item prev">
                        <a class="page-link"
                            href="/{{#if (equal (minus currentPage 1) 0)}}1{{else}}{{minus currentPage 1}}{{/if}}"><i
                                class="tf-icon bx bx-chevrons-left"></i></a>
                    </li>
                    {{#each totalPages}} {{!-- get parent scope because we are in the loop --}}
                    <li class="page-item {{#if (equal ../currentPage this) }}active{{/if}}">
                        <a class="page-link" href="/{{this}}">{{this}}</a>
                    </li>
                    {{/each}}
                    <li class="page-item next">
                        <a class="page-link"
                            href="/{{#if (moreOrEqualThan (sum currentPage 1) (getArrayLength totalPages) ) }}{{getArrayLength totalPages}}{{else}}{{sum currentPage 1}}{{/if}}"><i
                                class="tf-icon bx bx-chevrons-right"></i></a>
                    </li>
                </ul>
