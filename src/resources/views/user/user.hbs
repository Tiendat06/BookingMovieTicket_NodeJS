                            placeholder="DD / MM / YY" />
                    </div>
                </div>

                <div class="row">
                    <div class="col mb-3">
                        <label for="address_edit" class="form-label">Address</label>
                        <input type="text" name="address_edit" id="address_edit" class="form-control"
                            placeholder="Enter address" />
                    </div>
                </div>
            </div>
            
            <div class="alert text-center m-auto d-none" style="width: 90%;" id="edit-user__status" role="alert"></div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" id="btn_edit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal delete -->
<div class="modal fade" id="backDropModal_delete-user" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <form class="modal-content" onsubmit="return false">
            <div class="modal-header">
                <h5 class="modal-title" id="backDropModalTitle">Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="user_id_delete" id="user_id_delete">
