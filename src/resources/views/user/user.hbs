            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" id="btn_delete" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

